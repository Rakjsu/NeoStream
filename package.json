{
  "name": "neostream-iptv",
  "productName": "NeoStream IPTV",
  "private": true,
  "version": "1.0.0",
  "description": "Advanced IPTV player with auto-update support",
  "author": "Rakjsu",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder",
    "build:win": "tsc -b && vite build && electron-builder --win",
    "build:mac": "tsc -b && vite build && electron-builder --mac",
    "build:linux": "tsc -b && vite build && electron-builder --linux",
    "package:win": "vite build && npx @electron/packager . \"NeoStream IPTV\" --platform=win32 --arch=x64 --out=release --overwrite --asar --executable-name=\"NeoStream IPTV\" --icon=public/app-icon.png",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vidstack/react": "^1.12.13",
    "airplay-protocol": "^2.0.2",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "hls.js": "^1.6.15",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.554.0",
    "node-fetch": "^3.3.2",
    "node-upnp": "^1.3.0",
    "peer-ssdp": "^0.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.3.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "tailwind-merge": "^3.4.0",
    "upnp-mediarenderer-client": "^1.4.0",
    "vidstack": "^1.12.13"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "electron-installer-windows": "^3.0.0",
    "electron-winstaller": "^5.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.rakjsu.neostream",
    "productName": "NeoStream IPTV",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "node_modules",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "publisherName": "Rakjsu"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NeoStream IPTV"
    }
  }
}
